<!-- Modal -->
<div class="modal fade" id="contractModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="contractModalLabel">Create A New Contract</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form>
                <div class="form-group">
                   <label for="contractNameInput" >Contract Name</label>
                   <input type="text" class="form-control" id="contractNameInput" placeholder="(e.g. US Presidential Election 2020)">
                   <span class="bmd-help">Contract Name is required</span>
                </div>
                <div class="form-group">
                    <label for="contractCode">Contract Code</label>
                    <input type="text" class="form-control" id="contractCode" placeholder="(e.g. USP2020)">
                  </div>                
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                  <small id="emailHelp" class="form-text text-muted">To ensure payment, must be your Paypal Email</small>
                </div>
                <div class="form-group">
                    <label for="expiryDate">Expiration Date</label>
                    <input type="text" class="form-control datepicker" id="expiryDate" >
                    <span class="bmd-help">Expiration Date must a future date</span>
                  </div>                
                
              
                
              </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>